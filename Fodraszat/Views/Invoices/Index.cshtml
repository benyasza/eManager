@model IEnumerable<Fodraszat.Models.InvoiceListItem>

@{
    ViewBag.Title = "Számlák";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Számlák</h3>

<p class="right">
    @Html.ActionLink("Új számla bevitele", "Create")
</p>
<table class="table table-75 col-5 right">
    <tr>
        <th>
            Számlaszám
        </th>
        <th>
            Dátum
        </th>
        <th>
            Vendég
        </th>
        <th>
            Teljes ár
        </th>
        <th>
            Kedvezményes ár
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.InvoiceNumber
        </td>
        <td>
            @item.Date.ToShortDateString()
        </td>
        <td>
            @item.Client
        </td>
        <td>
            @item.TotalPrice
        </td>
        <td>
            @item.PriceWithDiscount
        </td>
        <td>
            @Html.ActionLink("Részletezés", "Details", new { invoiceNr = item.InvoiceNumber })
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
