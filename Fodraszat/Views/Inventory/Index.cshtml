@using Fodraszat.Models.ResponseObjects


@{
    ViewBag.Title = "Leltár";
    Layout = "~/Views/Shared/_Layout.cshtml";
    InventoryResponse stats = ViewData["Inventory"] as InventoryResponse;
}

<h2>Leltár</h2>


<br>
@using (Html.BeginForm("Index", "Inventory", FormMethod.Post))
{
    <div class="form-group filters">
        <div class="filter">
            @Html.TextBox("StartDate", "", new { @class = "date-picker" })
        </div>
        <div class="filter">
            @Html.TextBox("EndDate", "", new { @class = "date-picker" })
        </div>
        <div class="filter">
            <input type="submit" value="Lekérdezés" />
        </div>
    </div>
}

<table class="table right table-75 col-4">
    <tr>
        <th>
            Név
        </th>
        <th>
            Mennyiség / doboz
        </th>
        <th>
            Mennyiség
        </th>
        <th>
            Doboz
        </th>
    </tr>

    @if (stats != null && stats.Materials != null && stats.Materials.Count() > 0)
    {
        foreach (var item in stats.Materials)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.QuantiyPerBox
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.BoxCount
                </td>
            </tr>
        }
    }

</table>

